<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackerInator2000.MainPage"
             BackgroundColor="#000000"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center" WidthRequest="360">

            <Label Text="Хакер с ИБ"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#FFFFFF"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Frame CornerRadius="14"
                   Padding="0"
                   HasShadow="True"
                   BackgroundColor="#121212"
                   BorderColor="#333333"
                   HeightRequest="100">
                <Editor x:Name="InputEditor"
                        TextColor="#FFFFFF"
                        BackgroundColor="Transparent"
                        Placeholder="Введите текст..."
                        PlaceholderColor="#B0B0B0"
                        FontSize="14"
                        VerticalOptions="FillAndExpand" />
            </Frame>

            <Picker x:Name="ActionPicker"
                    BackgroundColor="#121212"
                    TextColor="#FFFFFF"
                    Title="Выберите действие:"
                    TitleColor="#B0B0B0"
                    SelectedIndexChanged="OnActionChanged" />

            <Picker x:Name="MethodPicker"
                    BackgroundColor="#121212"
                    TextColor="#FFFFFF"
                    Title="Выберите метод:"
                    TitleColor="#B0B0B0"
                    SelectedIndexChanged="OnMethodChanged" />

            <StackLayout x:Name="KeyInputLayout" IsVisible="True" Spacing="5">
                <Label Text="Ключ:" TextColor="#FFFFFF" FontSize="14" />
                <Frame CornerRadius="10"
                       Padding="0"
                       HasShadow="False"
                       BackgroundColor="#121212"
                       BorderColor="#333333"
                       HeightRequest="44">
                    <Entry x:Name="KeyEntry"
                           TextColor="#FFFFFF"
                           BackgroundColor="Transparent"
                           Placeholder="Введите ключ"
                           PlaceholderColor="#B0B0B0"
                           FontSize="14"
                           VerticalOptions="Center"
                           Margin="12,0" />
                </Frame>
            </StackLayout>

            <Grid x:Name="ElGamalParamsLayout" IsVisible="False" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="8" ColumnSpacing="8">

                <Label Text="p (простое, напр. 2357)" Grid.Row="0" Grid.Column="0" TextColor="#FFFFFF" FontSize="12" VerticalOptions="Center" />
                <Entry x:Name="PEditor" Grid.Row="0" Grid.Column="1" TextColor="#FFFFFF" BackgroundColor="#1E1E1E" Placeholder="2357" />

                <Label Text="g (примитивный корень, напр. 2)" Grid.Row="1" Grid.Column="0" TextColor="#FFFFFF" FontSize="12" VerticalOptions="Center" />
                <Entry x:Name="GEditor" Grid.Row="1" Grid.Column="1" TextColor="#FFFFFF" BackgroundColor="#1E1E1E" Placeholder="2" />

                <Label Text="x (секретный ключ, 1&lt;x&lt;p−1)" x:Name="XLabel" Grid.Row="2" Grid.Column="0" TextColor="#FFFFFF" FontSize="12" VerticalOptions="Center" />
                <Entry x:Name="XEditor" Grid.Row="2" Grid.Column="1" TextColor="#FFFFFF" BackgroundColor="#1E1E1E" Placeholder="1751" />

                <Label Text="y = gˣ mod p (публичный ключ)" x:Name="YLabel" Grid.Row="3" Grid.Column="0" TextColor="#FFFFFF" FontSize="12" VerticalOptions="Center" IsVisible="False" />
                <Entry x:Name="YEditor" Grid.Row="3" Grid.Column="1" TextColor="#FFFFFF" BackgroundColor="#1E1E1E" Placeholder="1185" IsVisible="False" />

                <Label Text="Подпись (r,s)" x:Name="SigLabel" Grid.Row="4" Grid.Column="0" TextColor="#FFFFFF" FontSize="12" VerticalOptions="Center" IsVisible="False" />
                <Entry x:Name="SigEditor" Grid.Row="4" Grid.Column="1" TextColor="#FFFFFF" BackgroundColor="#1E1E1E" Placeholder="r,s" IsVisible="False" />

                <HorizontalStackLayout Grid.Row="5" Grid.ColumnSpan="2" Spacing="10" HorizontalOptions="End">
                    <Button Text="Сгенерировать" Clicked="OnGenerateElGamalClicked"
                            BackgroundColor="#444444" TextColor="#E0E0E0" FontSize="12" HeightRequest="36" />
                    <Button Text="?" Clicked="OnElGamalHelpClicked"
                            BackgroundColor="#333333" TextColor="#FFFFFF" FontSize="16" WidthRequest="36" HeightRequest="36" CornerRadius="18" />
                </HorizontalStackLayout>

            </Grid>

            <Button Text="Выполнить"
                    Clicked="OnExecuteClicked"
                    BackgroundColor="#FFFFFF"
                    TextColor="#000000"
                    FontAttributes="Bold"
                    CornerRadius="26"
                    HeightRequest="52"
                    FontSize="16"
                    Margin="0,10" />

            <Label Text="Результат:" TextColor="#FFFFFF" FontSize="14" FontAttributes="Bold" />
            <Frame CornerRadius="14"
                   Padding="0"
                   HasShadow="True"
                   BackgroundColor="#121212"
                   BorderColor="#333333"
                   HeightRequest="120">
                <Editor x:Name="OutputEditor"
                        IsReadOnly="True"
                        TextColor="#FFFFFF"
                        BackgroundColor="Transparent"
                        FontSize="14"
                        VerticalOptions="FillAndExpand" />
            </Frame>

            <HorizontalStackLayout x:Name="QuickActionsLayout"
                                   IsVisible="False"
                                   Spacing="12"
                                   HorizontalOptions="Center"
                                   Margin="0,10">

                <Button Text="Дешифровать"
                        Clicked="OnDecryptResultClicked"
                        BackgroundColor="#1E1E1E"
                        TextColor="#E0E0E0"
                        CornerRadius="22"
                        FontSize="13"
                        HeightRequest="44"
                        WidthRequest="140"
                        BorderColor="#333333"
                        BorderWidth="1" />

                <Button Text="Взломать"
                        Clicked="OnBreakResultClicked"
                        BackgroundColor="#1E1E1E"
                        TextColor="#E0E0E0"
                        CornerRadius="22"
                        FontSize="13"
                        HeightRequest="44"
                        WidthRequest="140"
                        BorderColor="#333333"
                        BorderWidth="1" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>